# Dujyo Blockchain Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgresql://dujyo:dujyo_password@localhost:5432/dujyo
POSTGRES_DB=dujyo
POSTGRES_USER=dujyo
POSTGRES_PASSWORD=dujyo_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h

# Backend Configuration
RPC_PORT=8083
WS_PORT=8084
HOST=0.0.0.0

# Blockchain Node Configuration
BLOCKCHAIN_RPC_PORT=8080
BLOCKCHAIN_WS_PORT=8081
NODE_ID=validator-1
STAKE_AMOUNT=1000000
PEERS=validator-2:8080,validator-3:8080

# Frontend Configuration
REACT_APP_BACKEND_URL=http://localhost:8083
REACT_APP_BLOCKCHAIN_URL=http://localhost:8080
REACT_APP_WS_URL=ws://localhost:8081

# Redis Configuration (Required for Rate Limiting)
REDIS_URL=redis://127.0.0.1:6379
REDIS_MAX_CONNECTIONS=10
REDIS_CONNECTION_TIMEOUT=5

# Test Configuration
TEST_DATABASE_URL=postgresql://dujyo_test:dujyo_test_password@localhost:5432/dujyo_test
TEST_REDIS_URL=redis://127.0.0.1:6379
ENVIRONMENT=development

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
# ✅ P0.2: Enable strict signature verification (set to "true" for production)
ENABLE_SIGNATURE_VERIFICATION=false

# ✅ P0.3: Email Service Configuration
EMAIL_SERVICE=console
# Options: "console" (development), "sendgrid", "ses" (AWS SES)
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=noreply@dujyo.com
FRONTEND_URL=http://localhost:5173

# Blockchain Parameters
BLOCK_TIME=10000
MIN_STAKE=1000
MAX_STAKE=1000000
STAKING_APY=12
UNSTAKING_FEE=1
SWAP_FEE=0.3
MIN_LIQUIDITY=100

# Network Configuration
NETWORK_ID=1
CHAIN_ID=0x1
GAS_LIMIT=21000
GAS_PRICE=20000000000

# ✅ P1: Monitoring & Metrics Configuration
ENABLE_METRICS=true
LOG_LEVEL=info

# ✅ P1.3: Alert Configuration
ENABLE_DISCORD_ALERTS=false
ENABLE_TELEGRAM_ALERTS=false
ALERT_WEBHOOK_DISCORD=https://discord.com/api/webhooks/...
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
ALERT_ERROR_RATE_THRESHOLD=5.0
ALERT_DB_CONNECTION_THRESHOLD=80.0
ALERT_MEMORY_THRESHOLD=90.0
ALERT_HEALTH_CHECK_FAILURES=3

# Development Configuration
DEBUG=false
MOCK_DATA=false
ENABLE_SWAGGER=true
