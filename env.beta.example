# ✅ XWave Beta Environment Configuration
# Copia este archivo a .env.beta y configura los valores

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/xwave_beta

# ============================================
# REDIS (Rate Limiting Distribuido)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=8083
HOST=0.0.0.0

# ============================================
# CORS (Orígenes Permitidos)
# ============================================
# Separar múltiples orígenes con comas
CORS_ORIGINS=http://localhost:5173,https://beta.xwave.io,https://app.xwave.io

# ============================================
# JWT SECRETS
# ============================================
# ⚠️ CRÍTICO: Cambiar en producción - mínimo 32 caracteres aleatorios
JWT_SECRET=your_super_secure_jwt_secret_here_min_32_chars
JWT_EXPIRATION=86400

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FORMAT=pretty
# LOG_FORMAT=json  # Para producción con log aggregation
# LOG_FILE=/var/log/xwave/application.log

# ============================================
# EMAIL SERVICE (Password Reset) - CRÍTICO PARA BETA
# ============================================
# ⚠️ IMPORTANTE: Configurar al menos uno para password reset

# Opción 1: SendGrid (Recomendado)
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=beta@xwave.io

# Opción 2: AWS SES
# EMAIL_SERVICE=aws_ses
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_SES_FROM_EMAIL=beta@xwave.io

# Si no se configura, password reset usará console fallback (solo para desarrollo)

# ============================================
# SIGNATURE VERIFICATION
# ============================================
# true = Verificación estricta (producción)
# false = Verificación permisiva (MVP/beta)
ENABLE_SIGNATURE_VERIFICATION=false

# ============================================
# MONITORING & ALERTS
# ============================================
ENABLE_METRICS=true
ENABLE_DISCORD_ALERTS=false
ENABLE_TELEGRAM_ALERTS=false

# Discord Webhook (opcional)
# ALERT_WEBHOOK_DISCORD=https://discord.com/api/webhooks/...

# Telegram Bot (opcional)
# TELEGRAM_BOT_TOKEN=your-telegram-bot-token
# TELEGRAM_CHAT_ID=your-chat-id

# Alert Thresholds
ALERT_ERROR_RATE_THRESHOLD=5.0
ALERT_DB_CONNECTION_THRESHOLD=80
ALERT_MEMORY_THRESHOLD=90
ALERT_HEALTH_CHECK_FAILURES=3

# ============================================
# FRONTEND CONFIGURATION
# ============================================
FRONTEND_URL=http://localhost:5173
# FRONTEND_URL=https://beta.xwave.io

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================
MINIMUM_STAKE=1000
TRANSACTION_FEES=10

# ============================================
# UPLOAD CONFIGURATION
# ============================================
MAX_UPLOAD_SIZE_MB=100
UPLOAD_DIR=./uploads

# ============================================
# BACKUP CONFIGURATION
# ============================================
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=7

# ============================================
# BETA SPECIFIC
# ============================================
# Emails de prueba que reciben tokens iniciales
TEST_EMAILS=admin@xwave.admin,artist@xwave.artist,validator@xwave.validator,listener@example.com

# ============================================
# SECURITY NOTES
# ============================================
# ⚠️ CAMBIAR EN PRODUCCIÓN:
# - JWT_SECRET (mínimo 32 caracteres aleatorios)
# - DATABASE_URL (credenciales seguras)
# - CORS_ORIGINS (solo orígenes permitidos)
# - ENABLE_SIGNATURE_VERIFICATION=true
# - Email service API keys

