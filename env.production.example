# XWave Production Environment Variables
# Copy this file to .env.production and update with your actual values

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_REPLICATION_PASSWORD=your_secure_replication_password_here
DATABASE_URL=postgresql://xwave:your_secure_postgres_password_here@postgres-primary:5432/xwave

# Redis Configuration
REDIS_URL=redis://redis-primary:6379

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_here_min_32_chars

# Application Configuration
NODE_ENV=production
BACKEND_PORT=8083
FRONTEND_PORT=5173

# API URLs
REACT_APP_BACKEND_URL=https://api.xwave.com
REACT_APP_BLOCKCHAIN_URL=https://rpc.xwave.com
REACT_APP_WS_URL=wss://ws.xwave.com

# Monitoring
GRAFANA_PASSWORD=your_grafana_admin_password_here

# SSL/TLS (if using Let's Encrypt)
SSL_EMAIL=admin@xwave.com
SSL_DOMAIN=xwave.com

# IPFS Configuration (if using)
IPFS_HOST=ipfs-node
IPFS_PORT=5001

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
RUST_LOG=info

# Security
ALLOWED_ORIGINS=https://xwave.com,https://www.xwave.com
CORS_ORIGIN=https://xwave.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true
ENABLE_BACKUP=true
