{
  "name": "dujyo-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "DUJYO - Web3 Entertainment Platform Monorepo",
  "workspaces": [
    "dujyo-frontend",
    "DujyoMobile"
  ],
  "scripts": {
    "web:dev": "cd dujyo-frontend && npm run dev",
    "web:build": "cd dujyo-frontend && npm run build",
    "mobile:ios": "cd DujyoMobile && npx react-native run-ios",
    "mobile:android": "cd DujyoMobile && npx react-native run-android",
    "mobile:start": "cd DujyoMobile && npx react-native start",
    "backend:dev": "cd dujyo-backend && cargo run",
    "backend:build": "cd dujyo-backend && cargo build --release"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
