# ✅ Dujyo Beta Environment Configuration
# Configurado para deployment inmediato

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://yare@localhost:5432/xwave_blockchain

# ============================================
# REDIS (Rate Limiting Distribuido)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=8083
HOST=0.0.0.0

# ============================================
# CORS (Orígenes Permitidos)
# ============================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://beta.dujyo.io

# ============================================
# JWT SECRETS
# ============================================
# ⚠️ CRÍTICO: Secret generado para beta
JWT_SECRET=dujyo_beta_jwt_secret_2024_secure_key_32chars_min
JWT_EXPIRATION=86400

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FORMAT=pretty

# ============================================
# EMAIL SERVICE (Password Reset)
# ============================================
EMAIL_SERVICE=console
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=beta@dujyo.io

# ============================================
# SIGNATURE VERIFICATION
# ============================================
ENABLE_SIGNATURE_VERIFICATION=false

# ============================================
# MONITORING & ALERTS
# ============================================
ENABLE_METRICS=true
ENABLE_DISCORD_ALERTS=false
ENABLE_TELEGRAM_ALERTS=false

# Alert Thresholds
ALERT_ERROR_RATE_THRESHOLD=5.0
ALERT_DB_CONNECTION_THRESHOLD=80
ALERT_MEMORY_THRESHOLD=90
ALERT_HEALTH_CHECK_FAILURES=3

# ============================================
# FRONTEND CONFIGURATION
# ============================================
FRONTEND_URL=http://localhost:5173

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================
MINIMUM_STAKE=1000
TRANSACTION_FEES=10

# ============================================
# UPLOAD CONFIGURATION
# ============================================
MAX_UPLOAD_SIZE_MB=100
UPLOAD_DIR=./uploads

# ============================================
# BACKUP CONFIGURATION
# ============================================
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=7

# ============================================
# BETA SPECIFIC
# ============================================
TEST_EMAILS=admin@dujyo.admin,artist@dujyo.artist,validator@dujyo.validator,listener@example.com
